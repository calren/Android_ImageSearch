<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.gridimagesearch.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.codepath.gridimagesearch.app.SearchActivity"
            android:label="Image Search" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codepath.gridimagesearch.app.ImageDisplayActivity"
            android:label="Full Size Image" >
        </activity>
        <activity
            android:name="com.codepath.gridimagesearch.app.SettingsActivity"
            android:label="Advanced Settings"
            android:theme="@style/SettingsTheme">
        </activity>
    </application>

</manifest>
